  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "dependencies": {
    "@react-native-tailwindcss/styled": "*",
    "react-native": "^0.66.4"
  },
  "devDependencies": {
    "@types/react-native": "^0.66.10"
  }
