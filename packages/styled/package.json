{
  "name": "@react-native-tailwindcss/styled",
  "version": "2.0.1",
  "description": "React native tailwindcss styled API",
  "main": "dist/index.js",
  "repository": "https://github.com/teovillanueva/react-native-tailwindcss.git",
  "author": "Teodoro Villanueva <teodoro2102@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "tsc -w",
    "build": "tsc",
    "release": "yarn build && release-it --npm.skipChecks --ci"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(styled): release v${version} [skip ci]",
      "tagName": "styled@${version}"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "devDependencies": {
    "@types/react": "^17.0.38"
  },
  "dependencies": {
    "react": "^17.0.2",
    "twrnc": "^2.2.0"
  }
}
